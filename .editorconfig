root = true

[*]
end_of_line = crlf
insert_final_newline = true

[*.{js,java}]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = false

[*.{xml,json,yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = false

[plugin.xml]
indent_size = 4

[*.{h,m}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.ts]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
